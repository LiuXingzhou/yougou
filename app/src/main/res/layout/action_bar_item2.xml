<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/abar_padding"
                android:paddingRight="@dimen/abar_padding">

    <ImageButton
        android:id="@+id/abar_back"
        android:layout_width="@dimen/abr_back"
        android:layout_height="@dimen/abr_back"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/menu"/>

    <EditText
        android:id="@+id/abar_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/abar_search"
        android:layout_toRightOf="@id/abar_back"/>

    <ImageButton
        android:id="@id/abar_search"
        android:layout_width="@dimen/abr_search"
        android:layout_height="@dimen/abr_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="9dp"
        android:scaleType="centerInside"
        android:src="@drawable/search"/>

</RelativeLayout>
