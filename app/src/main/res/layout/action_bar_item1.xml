<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

    <ImageButton
        android:id="@+id/abar_back"
        android:layout_width="@dimen/abr_back"
        android:layout_height="@dimen/abr_back"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/menu"/>

    <TextView
        android:id="@+id/abar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="首页"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_1"/>

    <Button
        android:id="@+id/abar_cancel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:text="取消"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_3"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/abar_search"
        android:layout_width="@dimen/abr_search"
        android:layout_height="@dimen/abr_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="9dp"
        android:scaleType="centerInside"
        android:src="@drawable/search"/>

</RelativeLayout>
