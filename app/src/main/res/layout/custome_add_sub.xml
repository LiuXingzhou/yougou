<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/transparent"
        android:onClick="pressAdd"
        android:scaleType="centerInside"
        android:src="@drawable/add"/>

    <TextView
        android:id="@+id/custom_as_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_margin3"
        android:layout_marginTop="@dimen/main_margin3"
        android:background="@drawable/button"
        android:gravity="center"
        android:paddingBottom="@dimen/abar_padding"
        android:paddingLeft="@dimen/main_margin2"
        android:paddingRight="@dimen/main_margin2"
        android:paddingTop="@dimen/abar_padding"
        android:text="1"
        android:textColor="@color/title_class_1"
        android:textSize="@dimen/text_size_4"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/transparent"
        android:onClick="pressSub"
        android:scaleType="centerInside"
        android:src="@drawable/sub"/>

</LinearLayout>
