<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/main_margin2"
        android:background="@color/white">

        <ImageView
            android:id="@+id/fg_express_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/img1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fg_express_img"
            android:layout_toRightOf="@id/fg_express_img"
            android:text="物流状态：运输中"
            android:textColor="@color/title_class_1"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:id="@+id/fg_express_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fg_express_img"
            android:text="订单号：1313155664"
            android:textColor="@color/title_class_2"
            android:textSize="@dimen/text_size_4"/>


        <TextView
            android:id="@+id/fg_express_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fg_express_img"
            android:layout_toRightOf="@id/fg_express_img"
            android:text="承运公司：顺丰快递"
            android:textColor="@color/title_class_2"
            android:textSize="@dimen/text_size_4"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/main_margin2"
        android:background="@color/white">

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/main_margin2"
            android:background="@color/parting_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/fg_express_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
