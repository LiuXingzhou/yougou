<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/main_margin2"
                android:background="@color/white">

    <CheckBox
        android:id="@+id/itsc_rb"
        style="@style/RadioButtonMyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin2"/>

    <ImageView
        android:id="@+id/itsc_iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/main_margin3"
        android:layout_marginRight="@dimen/main_margin3"
        android:layout_toRightOf="@id/itsc_rb"
        android:src="@drawable/img1"/>

    <TextView
        android:id="@+id/itsc_iv_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin3"
        android:layout_toLeftOf="@+id/itsc_ll"
        android:layout_toRightOf="@id/itsc_iv_img"
        android:singleLine="true"
        android:text="时尚白色连衣裙 长袖小白裙 婚礼裙 显瘦公主裙"
        android:textColor="@color/title_class_1"
        android:textSize="@dimen/text_size_4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/itsc_iv_img"
        android:text="¥138"
        android:textColor="@color/title_class_2"
        android:textSize="@dimen/text_size_4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/main_margin3"
        android:layout_toRightOf="@id/itsc_iv_img"
        android:text="已选：M，白色"
        android:textColor="@color/hint_text"
        android:textSize="@dimen/text_size_4"/>

    <LinearLayout
        android:id="@id/itsc_ll"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/main_margin2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/abar_padding"
        android:paddingTop="@dimen/abar_padding">

        <ImageButton
            android:id="@+id/itsc_ib_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/add"/>

        <TextView
            android:id="@+id/itsc_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin3"
            android:layout_marginTop="@dimen/main_margin3"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingBottom="@dimen/abar_padding"
            android:paddingLeft="@dimen/main_margin2"
            android:paddingRight="@dimen/main_margin2"
            android:paddingTop="@dimen/abar_padding"
            android:text="1"
            android:textColor="@color/title_class_1"
            android:textSize="@dimen/text_size_4"/>

        <ImageButton
            android:id="@+id/itsc_ib_sub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/sub"/>
    </LinearLayout>

</RelativeLayout>
